<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_phone_monitor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="1.获取手机App详细信息"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_ping_monitor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="2.使用Ping检测网络接口"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_monitor"/>

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_file_monitor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="3.磁盘存储查看工具"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_ping_monitor"/>

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_crash_monitor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="4.崩溃收集日志到file文件"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_file_monitor"/>

        <com.yc.roundcorner.view.RoundTextView
            android:id="@+id/tv_crash_test"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="5.崩溃收集日志到file文件"
            android:textSize="@dimen/textSize18"
            android:background="@color/priority_green"
            android:layout_marginTop="@dimen/dp20"
            app:rRadius="@dimen/dp20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_crash_monitor"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
