<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/dp10"
    android:orientation="vertical">

    <com.yc.roundcorner.view.RoundTextView
        android:id="@+id/tv_reflect_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="1.通过Class获取信息"
        android:textSize="@dimen/textSize18"
        android:background="@color/priority_green"
        app:rRadius="@dimen/dp20" />

    <com.yc.roundcorner.view.RoundTextView
        android:id="@+id/tv_reflect_2"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="2.获取对象的变量"
        android:textSize="@dimen/textSize18"
        android:background="@color/priority_green"
        app:rRadius="@dimen/dp20" />

    <com.yc.roundcorner.view.RoundTextView
        android:id="@+id/tv_reflect_3"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="3."
        android:textSize="@dimen/textSize18"
        android:background="@color/priority_green"
        app:rRadius="@dimen/dp20" />

    <com.yc.roundcorner.view.RoundTextView
        android:id="@+id/tv_reflect_4"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="4."
        android:textSize="@dimen/textSize18"
        android:background="@color/priority_green"
        app:rRadius="@dimen/dp20" />

    <com.yc.roundcorner.view.RoundTextView
        android:id="@+id/tv_reflect_5"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="5."
        android:textSize="@dimen/textSize18"
        android:background="@color/priority_green"
        app:rRadius="@dimen/dp20" />

</LinearLayout>