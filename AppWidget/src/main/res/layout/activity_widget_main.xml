<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/dp10"
    android:orientation="vertical">

    <com.yc.roundcorner.view.RoundTextView
        android:id="@+id/tv_widget_round"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="1.圆角控件各种案例，别再用shape"
        android:textSize="@dimen/textSize18"
        android:background="@color/priority_green"
        app:rRadius="@dimen/dp20" />

    <com.yc.roundcorner.view.RoundTextView
        android:id="@+id/tv_widget_image"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="2.各种图片控件"
        android:textSize="@dimen/textSize18"
        android:background="@color/priority_green"
        app:rRadius="@dimen/dp20" />

    <com.yc.roundcorner.view.RoundTextView
        android:id="@+id/tv_widget_span"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="3.各种span文本控件"
        android:textSize="@dimen/textSize18"
        android:background="@color/priority_green"
        app:rRadius="@dimen/dp20" />

    <com.yc.roundcorner.view.RoundTextView
        android:id="@+id/tv_widget_chart"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp20"
        android:text="4.各种图表控件展示"
        android:textSize="@dimen/textSize18"
        android:background="@color/priority_green"
        app:rRadius="@dimen/dp20" />

</LinearLayout>